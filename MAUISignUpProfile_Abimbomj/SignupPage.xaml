<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUISignUpProfile_Abimbomj.Views.SignupPage"
             Title="Sign Up">

    <VerticalStackLayout Padding="20">
        <Entry x:Name="UsernameEntry" Placeholder="Username"/>
        <Entry x:Name="EmailEntry" Placeholder="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True"/>
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>
        <Button Text="Sign Up" Clicked="OnSignupClicked"/>
    </VerticalStackLayout>

</ContentPage>
