<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUISignUpProfile_Abimbomj.Views.ProfilePage"
             Title="Profile">

    <VerticalStackLayout Padding="20">
        <Label Text="Welcome," FontSize="24" HorizontalOptions="Center"/>
        <Label x:Name="UsernameLabel" FontSize="20" HorizontalOptions="Center"/>
        <Label x:Name="EmailLabel" FontSize="18" HorizontalOptions="Center"/>
        <Button Text="Sign Out" Clicked="OnSignOutClicked"/>
    </VerticalStackLayout>

</ContentPage>
